neighbor <%= @neighbor_ipv4 %> {
  description "Upstream IPv4 provider";
  router-id <%= @router_id %>;
  local-address <%= @local_address_ipv4 %>;
  local-as <%= @local_as %>;
  peer-as <%= @peer_as %>;
  hold-time <%= @hold_time %>;
  family {
    ipv4 unicast;
  }

  <% if @enable_ipv4_static_route -%>
  process route_0 {
    run /etc/exabgp/route_0_watchdog.sh;
  }

  static {
    route <%= @route_ipv4 %> {
      next-hop <%= @local_address_ipv4 %>;
      community [<%= @community %>];
      watchdog route_0;
    }
  }
  <% end -%>
}

<% if @neighbor_ipv6 %>
neighbor <%= @neighbor_ipv6 %> {
  description "Upstream IPv6 provider";
  router-id <%= @router_id %>;
  local-address <%= @local_address_ipv6 %>;
  local-as <%= @local_as %>;
  peer-as <%= @peer_as %>;
  hold-time <%= @hold_time %>;
  family {
    inet6 unicast;
  }

  static {
    route <%= @route_ipv6 %> {
      next-hop <%= @local_address_ipv6 %>;
      community [<%= @community %>];
    }
  }
}
<% end %>
